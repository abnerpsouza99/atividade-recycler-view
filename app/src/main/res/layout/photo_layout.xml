<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp">

    <TextView
        android:id="@+id/itemBox"
        android:layout_width="0dp"
        android:layout_height="187dp"
        android:background="@drawable/item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06" />

    <TextView
        android:id="@+id/tvItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="144dp"
        android:text="Title"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/itemBox"
        app:layout_constraintEnd_toEndOf="@+id/itemBox"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/itemBox"
        app:layout_constraintTop_toTopOf="@+id/itemBox"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="101dp"
        android:layout_height="105dp"
        app:layout_constraintBottom_toBottomOf="@+id/itemBox"
        app:layout_constraintEnd_toEndOf="@+id/itemBox"
        app:layout_constraintHorizontal_bias="0.087"
        app:layout_constraintStart_toStartOf="@+id/itemBox"
        app:layout_constraintTop_toTopOf="@+id/itemBox"
        app:layout_constraintVertical_bias="0.512"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvItemUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="111dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="57dp"
        android:text="Image URL"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/itemBox"
        app:layout_constraintEnd_toEndOf="@+id/itemBox"
        app:layout_constraintStart_toStartOf="@+id/itemBox"
        app:layout_constraintTop_toTopOf="@+id/itemBox" />

    <TextView
        android:id="@+id/tvURL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="196dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="38dp"
        android:text="URL"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/itemBox"
        app:layout_constraintEnd_toEndOf="@+id/itemBox"
        app:layout_constraintStart_toStartOf="@+id/itemBox"
        app:layout_constraintTop_toBottomOf="@+id/tvItemUrl" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="127dp"
        android:text="ID:"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/itemBox"
        app:layout_constraintEnd_toEndOf="@+id/itemBox"
        app:layout_constraintStart_toStartOf="@+id/itemBox"
        app:layout_constraintTop_toTopOf="@+id/itemBox" />

    <TextView
        android:id="@+id/tvPhotoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="196dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="127dp"
        android:text="0"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/itemBox"
        app:layout_constraintEnd_toEndOf="@+id/itemBox"
        app:layout_constraintStart_toStartOf="@+id/itemBox"
        app:layout_constraintTop_toTopOf="@+id/itemBox" />

    <TextView
        android:id="@+id/tvAlbumId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="244dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="106dp"
        android:text="0"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/itemBox"
        app:layout_constraintEnd_toEndOf="@+id/itemBox"
        app:layout_constraintStart_toStartOf="@+id/itemBox"
        app:layout_constraintTop_toTopOf="@+id/itemBox" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="106dp"
        android:text="Album ID:"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/itemBox"
        app:layout_constraintEnd_toEndOf="@+id/itemBox"
        app:layout_constraintStart_toStartOf="@+id/itemBox"
        app:layout_constraintTop_toTopOf="@+id/itemBox" />


</androidx.constraintlayout.widget.ConstraintLayout>